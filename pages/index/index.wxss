/**index.wxss**/
page{
  color: #666;
  padding: 10rpx;
}
.nav wrap{}
.nav{
  white-space: nowrap;
  padding: 5rpx 0;
}
.navitem{
  padding:20rpx 40rpx;
  font-size: 30rpx;
  display: inline-block;   
}
.navitem.active{
  border-bottom: 5rpx solid pink;
}

.slides{
  margin-top: 10rpx;
}
.slides swiper{
  height:220rpx;
}
.slides navigator{
  width: 100%;
  height: 100%;
}



.videowrap{
  display:flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
}
.videoitem{
  width:48%;
  margin-bottom: 20rpx;
}
.videoimg{
  position: relative;
}

.videoimg image{
  width: 100%;
  border-radius: 15rpx;
}
.videoimg .videoinfo{
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}
.videotitle{
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}